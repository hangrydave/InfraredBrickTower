    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch IBTController",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/Windows/Debug/InfraredBrickTower",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(Windows) Launch IBTConsole",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/Windows/Debug/IBTConsole",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(gdb) Launch IBTController",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/Linux/InfraredBrickTower",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch IBTConsole",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/build/Linux/IBTConsole",
            "args": [ "~/RCX/firm0332.lgo" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}